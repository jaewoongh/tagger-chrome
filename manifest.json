{
	"manifest_version":	2,
	"name":				"Tagger",
	"version":			"1.0",
	"description":		"Tag web pages so that you can easily find it later.",

	"author":			"Jaewoong Hwang",
	"permissions": 		[
		"webNavigation",
		"tabs",
		"storage",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"icons":			{
		"16":			"icon-bitty.png",
		"48":			"icon-small.png",
		"128":			"icon-large.png"
	},
	"background":		{
		"scripts":		["background.js"],
		"persistent":	false
	},
	"content_scripts":	[{
		"matches":		["http://*/*", "https://*/*"],
		"js":			["tagger.js"]
	}],
	"page_action":		{
		"default_icon":	{
			"19":		"pageicon.png",
			"38":		"pageicon2x.png"
		},
		"default_title":	"Tag",
		"default_popup":	"popup.html"
	},
	"options_page":		"options.html"
}